{% extends 'base.html.twig' %}

{% block title %}{{ product.id ? 'Edit' : 'New' }} Book{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="mb-4">{{ product.id ? 'Edit' : 'New' }} Book</h1>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.author) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.price) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.stock) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.isbn) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.publicationYear) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.condition) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.category) }}
                        </div>
                    </div>

                    {{ form_row(form.description) }}
                    {{ form_row(form.image) }}

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> {{ product.id ? 'Update' : 'Create' }} Book
                        </button>
                        <a href="{{ path('app_products') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 