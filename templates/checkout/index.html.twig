{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Checkout</h1>

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Shipping Information</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.shippingName) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.shippingEmail) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.shippingPhone) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.shippingCountry) }}
                                </div>
                            </div>

                            {{ form_row(form.shippingAddress) }}

                            <div class="row">
                                <div class="col-md-4">
                                    {{ form_row(form.shippingCity) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(form.shippingState) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(form.shippingPostalCode) }}
                                </div>
                            </div>

                            {{ form_row(form.notes) }}

                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-credit-card"></i> Place Order
                                </button>
                                <a href="{{ path('app_cart') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Cart
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush mb-3">
                            {% for item in cartItems %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-0">{{ item.product.title }}</h6>
                                            <small class="text-muted">Quantity: {{ item.quantity }}</small>
                                        </div>
                                        <span>${{ item.subtotal|number_format(2) }}</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>${{ total|number_format(2) }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total:</strong>
                            <strong>${{ total|number_format(2) }}</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 